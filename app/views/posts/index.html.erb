<%= render(PageComponent.new) do |component| %>
  <% component.with(:title) do %>
      <h1 class="display-4 mt-4">Posts</h1>
    <% end %>
  <% component.with(:body) do %>
    <div class="album">
      <div class="container">
        <div class="row">
          <%= render(Posts::PostComponent.with_collection(@posts)) %>
        </div>
      </div>
    </div>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
<% end %>
